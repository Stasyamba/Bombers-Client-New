<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 creationComplete="init();"
			 >
	
	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<s:transitions>
		
		<s:Transition toState="over">
			<s:Parallel>
				<s:Fade target="{buttonTextGlowFilter}" alphaFrom="0" alphaTo="1" duration="100"/>
				<s:Fade target="{buttonShadow}" alphaFrom="1" alphaTo="0" duration="100"/>
			</s:Parallel>
		</s:Transition>
		
		
		<s:Transition toState="up">
			<s:Parallel>
				<s:Fade target="{buttonTextGlowFilter}" alphaFrom="1" alphaTo="0" duration="100"/>
				<s:Fade target="{buttonShadow}" alphaFrom="0" alphaTo="1" duration="100"/>
			</s:Parallel>
			
		</s:Transition>
		
	</s:transitions>
	
	<fx:Script>
		<![CDATA[
			/* Define the skin elements that should not be colorized.
			For toggle button, the graphics are colorized but the label is not. */
			static private const exclusions:Array = [];
			
			override public function get colorizeExclusions():Array {
				return exclusions;
			}
			
			// may be need color matrix filter
			
			private function init():void {
			}
		]]>
	</fx:Script>
	
	
	<s:BitmapImage source="@Embed(source='assets/pageworld/toppanel/resources/crystallsButtonBg.png')" />
	
	<s:filters>
		<s:DropShadowFilter id="buttonShadow" blurX="3" blurY="3" color="0x000000" alpha="1"
							strength="1" distance="1"
							/>
		
		
		<s:GlowFilter id="buttonTextGlowFilter" blurX="10" blurY="10" color="0x88bc1f" alpha="0"
					  strength="3.5"
					  />
	</s:filters>
	
	
	
	
</s:SparkSkin>