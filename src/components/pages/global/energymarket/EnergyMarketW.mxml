				</flexcomponents:PatternButton>
			</s:HGroup>
			
		</s:VGroup>
		
	</s:HGroup>
	
	<flexcomponents:CloseButton skinClass="skins.buttons.CloseButtonOriginS" x="380" y="15" scale="0.8"
								click="closeWrapper();"
								/>
	
	
	<s:controlBarContent/>
</s:Panel>