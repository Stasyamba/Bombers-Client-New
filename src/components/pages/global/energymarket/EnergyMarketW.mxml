		<s:HGroup width="130" height="100%"
				  horizontalAlign="center" verticalAlign="middle"
				  >
			<s:BitmapImage source="@Embed(source='assets/windows/energy/bg.png')" />
		</s:HGroup>
		
		<s:VGroup width="100%" height="100%"
